<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="ru.sibek.parus.fragment.SpecDetailFragment"
    android:baselineAligned="false">

    <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText" />-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_detail_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/text_quant"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:inputType="phone"
                android:digits="0123456789."
                android:gravity="center"
                android:background="@drawable/rect_text_edit" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/text_meas_spec" />

            <Button
                android:id="@+id/button_storage"
                android:layout_width="135dp"
                android:layout_height="80dp"
                android:text="New Button" />

            <Button
                android:id="@+id/button_rack"
                android:layout_width="135dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button_cell"
                android:layout_width="135dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:visibility="invisible" />


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="400dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">

            <Button
                android:id="@+id/button_detail_spec_save"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginRight="50dp"
                android:text="Сохранить" />

            <Button
                android:id="@+id/button_detail_spec_cancel"
                android:layout_width="120dp"

                android:layout_height="80dp"
                android:text="Отмена" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
